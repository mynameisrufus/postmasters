!!!
%html
  %head
    %title The Postmasters Lodgings | Luxury Boutique Accommodation
    %meta{:name => "description", :content => "The Postmasters Lodgings"}/
    %meta{:name => "keywords", :content => "Luxury Boutique Accommodation Rawene New Zealand"}/
    = stylesheet_link_tag 'application'
    %link{:href => s3("favicon.png"), :rel => "shortcut icon"}/
    = javascript_include_tag 'script.min.js'
    /[if IE]
      = javascript_include_tag 'http://html5shiv.googlecode.com/svn/trunk/html5.js'
    = csrf_meta_tag
  %body
    #container
      %header
        %h1
          The Postmasters Lodgings
        %nav
          %ul
            %li= link_to "Welcome", "/"
            %li= link_to "Gallery", "gallery"
            %li= link_to "Booking", "booking"
      %article
        = yield
    :javascript
      var scripts = [];
      $script('http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js', 'jquery', function() {
        scripts[0] = 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.5/jquery-ui.min.js';
        scripts[1] = "#{javascript_path('jquery.galleriffic')}"
        scripts[2] = "#{javascript_path('jquery.opacityrollover')}"
        scripts[3] = "#{javascript_path('jquery.scrollTo-1.4.2-min')}"
        scripts[4] = "#{javascript_path('jquery.validate.min')}"
        $script(scripts, 'plugins')
      });
      $script.ready('jquery', function() {
        $('div.fade').hide();
        $('a.fade').click(function(event){
          event.preventDefault();
          regex = new RegExp(/#(\w+)$/);
          elem  = $(regex.exec(this)[0]);
          elem.fadeIn();
          $.scrollTo(elem, '50');
        });
      });
    - if Rails.env == 'production'
      :javascript
        $script("//www.google-analytics.com/ga.js", function(){
          var t = _gat._getTracker ("UA-17751156-3");
          t._trackPageview();
        });

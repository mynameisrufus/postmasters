#gallery-container
  #gallery.content
    #controls.controls
    .slideshow-container
      #loading.loader
      #slideshow.slideshow
    #caption.caption-container
  #thumbs.navigation
    %ul.thumbs.noscript
      - @pictures.each do |picture|
        %li
          = picture_helper(picture)
          .caption
            .download
              = link_to "Download Original", "#{s3("images_gallery")}/#{picture[:name]}.jpg"
            .image-title
              = picture[:title]
            .image-desc
              = picture[:desc]
